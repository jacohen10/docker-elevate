<div class="jumbotron vertical-center">
<h2>Edit Customer</h2>

<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :phone %>
<%= f.text_field :phone %>
<%= f.label :year %>
<%= f.select :year, options_for_select([['1st Year', 1],['2nd Year', 2], ['3rd Year', 3], ['4th Year', 4]]) %>
<% if current_user.role == "admin"%>
<%= f.label :plan %>
<%= f.text_field :plan %>
<%else%>
<p>Plan selected: <%=@customer.plan%></p>
<%end%>

<%= f.submit%>
<%end%>
</div>
