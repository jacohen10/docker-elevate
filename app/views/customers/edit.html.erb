<div class="container larger-screen main-container">
  <h2>Edit Customer</h2>
  <%= form_for @customer do |f| %>
  <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div class="form-group">
      <%= f.label :year %>
      <%= f.select :year, options_for_select([['1st Year', 1.to_i], ['2nd Year', 2.to_i], ['3rd Year', 3], ['4th Year', 4]], selected: @customer.year) %>
    </div>
    <% if current_user.role == "admin"%>
      <div class="form-group">
          <%= f.label :plan %>
          <%= f.text_field :plan %>
      </div>
    <%else%>
      <p>Plan selected: <%=@customer.plan%></p>
    <%end%>
    <%= f.submit "Update Customer", class: "main-button"%>
  <%end%>
</div>
