<%= form_for [@restaurant, @open_time] do |f| %>
<form role="form">
  <div class="form-group">
    <ul>
      <li><%= f.label :day, 'Monday'%>
      <%= f.radio_button :day,'Monday',value: 'Monday' %></li>
      <li><%= f.label :day, 'Tuesday'%>
      <%= f.radio_button :day, 'Tuesday',value: 'Tuesday'%></li>
      <li><%= f.label :day, 'Wednesday'%>
      <%= f.radio_button :day, 'Wednesday',value: 'Wednesday'%></li>
      <li><%= f.label :day, 'Thursday'%>
      <%= f.radio_button :day, 'Thursday',value: 'Thursday'%></li>
      <li><%= f.label :day, 'Friday'%>
      <%= f.radio_button :day, 'Friday',value: 'Friday'%></li>
      <li><%= f.label :day, 'Saturday'%>
      <%= f.radio_button :day, 'Saturday',value: 'Saturday'%></li>
      <li><%= f.label :day, 'Sunday'%>
      <%= f.radio_button :day, 'Sunday',value: 'Sunday'%></li>
    </ul>
  </div>
  <div class="form-group">
    <%= time_select :open_time, 'opening', {ampm: true, minute_step: 10}%>

  </div>
  <div class="form-group">
    <%= time_select :open_time, 'closing', {ampm: true, minute_step: 10}, {default: {hour:"20", minute:"0"}}%>
  </div>
  <%= f.submit%>
</form>
<%end%>
